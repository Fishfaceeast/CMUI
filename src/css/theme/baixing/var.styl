
////////////////////  bx - var  ////////////////////

/* --------------------------------------------- */
/** color **/

// override defaults
$color-bg = white

$color-fg-minor = #999
$color-fg-light = #666
$color-fg = #333
$color-fg-dark = #111
$color-fg-highlight = #f46

$color-link = #0059b2

// theme
$bx-color-x-light-gray = #f6f6f6
$bx-color-light-gray = #eee
$bx-color-gray = #ddd
$bx-color-active-green = #80d032

/* --------------------------------------------- */
/** visual **/

// visual
$border-radius = 5px


/* --------------------------------------------- */
/** text **/

// override defaults
$font-size = 15px
$line-height-text = 1.6

// theme
$bx-fs-headline = 18px
$bx-fs-headline-minor = 16px
$bx-fs-text-minor = 13px


/* --------------------------------------------- */
/** page **/

// nav bar
$nav-bar-height = 44px
$nav-bar-padding = 7px

$nav-bar-color-bg ?= #efeeeb
$nav-bar-color-border ?= #aaa

$nav-bar-title-fs = 18px

$nav-bar-btn-height = 28px
$nav-bar-btn-br = 5px

// content
$page-content-padding-h = 10px


/* --------------------------------------------- */
/** msg box **/
$msg-box-color-fg-info = #078993
$msg-box-color-fg-success = #448346
$msg-box-color-fg-error = #fd4b00
$msg-box-color-fg-warning = #f93

$msg-box-color-bg-info = #d7ebec
$msg-box-color-bg-success = #e2f1cf
$msg-box-color-bg-error = #ffe8de
$msg-box-color-bg-warning = #ffe8de


/* --------------------------------------------- */
/** list **/
$list-item-min-height = 50px
$list-item-padding-h = 15px

